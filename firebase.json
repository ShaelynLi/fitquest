{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/__pycache__/**",
      "**/venv/**",
      "backend/**",
      "frontend/**"
    ],
    "rewrites": [
      {
        "source": "/api{,/**}",
        "run": {
          "serviceId": "fitquest-api",
          "region": "australia-southeast1"
        }
      }
    ]
  }
}
